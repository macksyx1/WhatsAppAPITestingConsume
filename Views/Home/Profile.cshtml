@model UserProfile

@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">User Profile</h4>
                    <a href="@Url.Action("Logout", "Home")" class="btn btn-outline-danger btn-sm">Logout</a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Account Information</h5>
                            <table class="table table-bordered">
                                <tr>
                                    <th>User ID:</th>
                                    <td>@Model.Id</td>
                                </tr>
                                <tr>
                                    <th>Phone Number:</th>
                                    <td>@Model.PhoneNumber</td>
                                </tr>
                                <tr>
                                    <th>Status:</th>
                                    <td>
                                        @if (Model.IsVerified)
                                        {
                                            <span class="badge bg-success">Verified</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Not Verified</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Member Since:</th>
                                    <td>@Model.CreatedAt.ToString("MMM dd, yyyy")</td>
                                </tr>
                                <tr>
                                    <th>Last Login:</th>
                                    <td>@(Model.LastLogin?.ToString("MMM dd, yyyy HH:mm") ?? "Never")</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6 text-center">
                            <div class="mb-4">
                                <i class="fas fa-user-circle fa-5x text-primary"></i>
                            </div>
                            <h5>Welcome!</h5>
                            <p class="text-muted">You have successfully authenticated using WhatsApp OTP</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>